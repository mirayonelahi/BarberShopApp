<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserHomeFragment">

    <Button
        android:id="@+id/buttonGetAll"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="50dp"
        android:text="All Barber"
        app:layout_constraintBottom_toTopOf="@+id/buttonViewAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPricing"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginBottom="65dp"
        android:text="Pricing"
        app:layout_constraintBottom_toTopOf="@+id/buttonAboutUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMessageUs" />

    <Button
        android:id="@+id/buttonMessageUs"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:text="Message Us"
        app:layout_constraintBottom_toTopOf="@+id/buttonPricing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewAppointment" />

    <Button
        android:id="@+id/buttonViewAppointment"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:text="View Appointment"
        app:layout_constraintBottom_toTopOf="@+id/buttonMessageUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetAll" />

    <Button
        android:id="@+id/buttonAboutUs"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginBottom="140dp"
        android:text="About Us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPricing" />
</androidx.constraintlayout.widget.ConstraintLayout>